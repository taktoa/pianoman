source @pianomanHelpers@

usage () {
    usage-header "pianoman-config [OPTION]... TEAMSPEAK-HOME" \
                 "Launch a graphical TeamSpeak so that you can " \
                 "configure the TeamSpeak settings."
    add-param    "TEAMSPEAK-HOME" "the TeamSpeak home directory"
    help-options
    # if you want to add options in the future:
    # option       "-l" "--long" "description"
    usage-footer
    newline
    if test -n "${2}"; then exit "${2}"; else exit 1; fi
}

test "$#" -eq "1" || { usage "Wrong number of arguments" 1; }
test -e "${1}"    || { usage "Path not found: ${1}"      2; }
test -d "${1}"    || { usage "${1} is not a directory."  3; }

while (( $# > 1 )); do
  case "${1}" in
    -h|--help)
        usage "" 4
        ;;
    -v|--version)
        echo "PianoMan version: @version@"
        exit 0
        ;;
    *)
        usage "Unknown option: ${1}" 5
        bar
        ;;
  esac
  shift 1
done

set-pianoman-environment-variables "${1}"

@pulseaudioBinary@ -n --use-pid-file=true -F @pulseConfig@ &
export PULSE_SINK="@pulseLoopbackSink@"
export PULSE_SOURCE="@pulseInputSink@.monitor"
@teamspeakBinary@
@pulseaudioBinary@ -k

